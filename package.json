{
  "name": "appium-monorepo",
  "private": true,
  "scripts": {
    "bootstrap": "run-p clean:* && lerna bootstrap --force-local && npm run link",
    "build": "run-s clean setupPkg transpile copy",
    "changelog": "node ./scripts/changelog.js",
    "clean": "run-p clean:*",
    "clean:build": "rimraf ./packages/*/build",
    "clean:node_modules": "rimraf ./packages/node_modules",
    "clean-full:package_modules": "rimraf ./packages/*/node_modules",
    "copy": "lerna run --parallel copy",
    "generate-docs": "node ./scripts/docs/parse.js",
    "link": "node ./scripts/link",
    "release": "NODE_ENV=production npm run setup-full && npm run generate:typings && lerna publish --exact && npm run pushReleaseTag",
    "release:next": "npm run release -- --dist-tag next",
    "pushReleaseTag": "node ./scripts/pushTags.js",
    "setup": "run-s bootstrap build",
    "setupPkg": "lerna run --parallel setup",
    "setup-full": "run-s clean-full:package_modules bootstrap build",
    "test": "run-s test:depcheck test:eslint test:coverage",
    "test:depcheck": "node ./scripts/depcheck.js",
    "test:eslint": "eslint --cache packages sample-code scripts",
    "test:coverage": "jest --coverage --logHeapUsage",
    "transpile": "lerna run --parallel transpile",
    "watch": "node ./scripts/watch",
    "watch:pkg": "lerna exec 'npm run compile -- --watch' --scope",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/node": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@octokit/rest": "^18.0.0",
    "@types/jest": "^26.0.0",
    "appium-support": "^2.49.0",
    "aws-sdk": "^2.539.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-source-map-support": "^2.1.1",
    "depcheck": "^1.2.0",
    "eslint": "^7.2.0",
    "eslint-plugin-import": "^2.18.2",
    "fancy-log": "^1.3.3",
    "handlebars": "^4.7.6",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.0",
    "lodash": "^4.17.20",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "shelljs": "^0.8.3",
    "source-map-support": "^0.5.13",
    "validate.js": "^0.13.1",
    "yaml-js": "^0.2.3"
  },
  "dependencies": {}
}
